# Nova CI-Rescue configuration
# Copy this file to .env and fill in values. Do NOT commit your real .env.

# LLM providers
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest

# OpenSWE service
OPENSWE_BASE_URL=
OPENSWE_API_KEY=

# Policy & limits
MAX_ITERS=6
GLOBAL_TIMEOUT_S=1200
PYTEST_TIMEOUT_S=600
DIFF_MAX_CHANGED_LINES=50
ALLOW_TEST_MODS=false

# Network allow-list (comma-separated hostnames)
NETWORK_ALLOWLIST=api.openai.com,api.anthropic.com
